<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.position.updater" name="Resume Position Updater" version="0.9.0" provider-name="srhamil">
  <requires>
    <!-- Those are the version on final release. Just depend on the python version for Betas/RCs -->
    <import addon="xbmc.python" version="3.0.0"/>	  
    <import addon="xbmc.json"   version="12.2.1"/>
    <import addon="xbmc.addon"  version="19.0.0"/>
  </requires>
  <extension 
    point="xbmc.service" 
    library="default.py" 
    start="login"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Saves resume point on player events or periodically</summary>
    <description lang="en">Saves resume point on some player events  and/or or periodically while the player is playing. Allows the resume point to be saved to the Kodi database and/or the associated NFO file.</description>
    <platform>all</platform>
    <language>en</language>
     <license>Creative Commons Attribution-NonCommercial-ShareAlike 4.0 International (CC BY-NC-SA 4.0)</license>
    <forum></forum>
    <website></website>
    <email>srhamil@yahoo.com</email>
    <source><!-- https://github.com/srhamil/service.position.updater.git --></source>
    <assets>
        <icon>resources/icon.png</icon>
        <fanart>resources/fanart.jpg</fanart>
    </assets>
  </extension>
</addon>
